      <artifactId>requireTest</artifactId>
      <version>1.0</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/jruby/requireTest-1.0.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>rspec</artifactId>
      <version>${rspec.version}</version>
      <type>gem</type>
    </dependency>
